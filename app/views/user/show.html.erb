<!DOCTYPE html>
<html lang="en">
    <header>
        <% if flash[:errors] %>
            <% flash[:errors].each do |e| %>
            <p id="error"><%= e %></p>  
            <% end %>
        <% end %>
        <div id="header_container">
                <a href="/profile">My Profile</a>
                <br>
                <a href="/logout">Logout</a>
        </div>
    </header>
    <body>
        <div>
            <h3><%= @user.name %></h3>
            <h3>Description: <%= @user.description %></h3>
        </div>
    </body>
</html>